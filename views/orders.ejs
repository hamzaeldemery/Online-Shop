<%- include('parts/header')%>
<%- include('parts/navbar')%>

<div class="container">
     <%if(orders.length){%>
          <div class="container mb-4">
               <div class="row">
                   <div class="col-12">
                       <div class="table-responsive">
                              <table class="table table-striped">
                                   <thead>
                                        <tr>
                                            <th scope="col"> Image</th>
                                            <th scope="col">Product</th>
                                            <th scope="col">Quantity</th>
                                            <th scope="col" class="text-center">Price</th>
                                            <th scope="col">Address</th>
                                            <th scope="col">Status</th>
                                            <th scope="col">Time</th>
                                            <th> </th>
                                        </tr>
                                   </thead>
                                   <tbody>
                                        <%for(let itm of orders){%>
                                             <tr>
                                                  <td><img src="<%=itm.image%>" /> </td>
                                                  <td><a href="/products/<%=itm.productId%>"><%=itm.name%></a></td>
                                                  <td><%=itm.amount%></td>
                                                  <%let cost = itm.amount * itm.price%>
                                                  <td class="text-right">RM<%=cost%></td>
                                                  <td><%=itm.address%></td>
                                                  <td><%=itm.status%></td>
                                                  <td><%=itm.timeStamp%></td>
                                                  <td>
                                                       <form action="/orders/delete" method="POST">
                                                            <input type="hidden" name="id" value="<%=itm._id%>">
                                                            <input type="submit" value="Cancel" class="btn btn-danger">
                                                       </form>
                                                  </td>
                                             </tr>
                                        <%}%>
                                   </tbody>
                              </table>
                         </div>
                    </div>
                    <div class="col mb-2">
                         <div class="row">
                              <form method="POST">
                                   <div class="col-sm-12 col-md-6 text-right">
                                       <input type="submit" class="btn btn-lg btn-block btn-danger text-uppercase" formaction="/orders/deleteAll" value="cancel all">
                                   </div>
                              </form>
                         </div>
                   </div>
               </div>
          </div>
     <%}else{%>
          <h3>No orders to display</h3>
     <%}%>
</div>



<%- include('parts/footer')%>
          
          